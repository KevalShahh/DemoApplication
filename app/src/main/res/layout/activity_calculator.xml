<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/edt_calc"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_calc"
        android:layout_margin="10dp"
        android:id="@+id/tv_calc"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        android:id="@+id/guidline_calc"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidline_calc"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_2"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/guidline_calc"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_3"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintTop_toBottomOf="@id/guidline_calc"
        app:layout_constraintEnd_toStartOf="@id/btn_sum"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_5"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_6"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintEnd_toStartOf="@id/btn_sub"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/btn_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_8"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_9"
        app:layout_constraintStart_toEndOf="@id/btn_8"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintEnd_toStartOf="@id/btn_mul"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="."
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/btn_0"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_0"
        app:layout_constraintStart_toEndOf="@id/btn_dot"
        app:layout_constraintTop_toBottomOf="@id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/btn_clear"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="C"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/btn_clear"
        app:layout_constraintStart_toEndOf="@id/btn_0"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintEnd_toStartOf="@id/btn_div"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="+"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/btn_sum"
        app:layout_constraintTop_toBottomOf="@id/guidline_calc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="-"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/btn_sub"
        app:layout_constraintTop_toBottomOf="@id/btn_sum"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="*"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/btn_mul"
        app:layout_constraintTop_toBottomOf="@id/btn_sub"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="/"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/btn_div"
        app:layout_constraintTop_toBottomOf="@id/btn_mul"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:onClick="append"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btn_equals"
        android:text="="
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_clear"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>