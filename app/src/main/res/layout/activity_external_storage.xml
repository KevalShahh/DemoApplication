<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExternalStorage">

    <EditText
        android:id="@+id/edt_external_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Data"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_external_data"
        app:layout_constraintEnd_toStartOf="@id/btn_save_public"
        android:layout_margin="10dp"
        android:id="@+id/btn_save_private"
        android:text="save privately"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_public"
        app:layout_constraintStart_toEndOf="@id/btn_save_private"
        app:layout_constraintTop_toBottomOf="@id/edt_external_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:text="save publicaly"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_private"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_save_public"
        android:layout_margin="10dp"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_public"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data_private"
        android:layout_margin="10dp"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show private data"
        android:id="@+id/btn_show_private"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data_public"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show public data"
        android:id="@+id/btn_show_public"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_show_private"
        android:layout_margin="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
