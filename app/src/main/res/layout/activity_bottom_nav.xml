<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cons_bottom"
    tools:context=".BottomNav">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/bottom_nav"
        app:menu="@menu/bottom_nav_menu"
        android:theme="@style/Theme.bottomNav"
        />
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:mbn_backgroundBottomColor="@color/yellow"
        app:mbn_countBackgroundColor="@color/oragne"
        app:mbn_countTextColor="@color/white"
        app:mbn_defaultIconColor="@color/black"
        app:mbn_rippleColor="@color/green"
        app:mbn_selectedIconColor="@color/green"
        app:mbn_shadowColor="#1f212121"
        />
</androidx.constraintlayout.widget.ConstraintLayout>