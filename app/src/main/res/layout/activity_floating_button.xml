<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FloatingButton">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new group"
        app:layout_constraintEnd_toStartOf="@id/fab2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:id="@+id/tv_fab2"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:textAllCaps="true"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="32dp"
        app:fabSize="mini"
        android:backgroundTint="@color/grey"
        android:src="@drawable/ic_baseline_group_24"
        android:id="@+id/fab2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new sms"
        app:layout_constraintEnd_toStartOf="@id/fab2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:id="@+id/tv_fab3"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:textAllCaps="true"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="32dp"
        android:backgroundTint="@color/grey"
        android:src="@drawable/ic_baseline_sms_24"
        android:id="@+id/fab3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new video call"
        app:layout_constraintEnd_toStartOf="@id/fab2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:id="@+id/tv_fab4"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:textAllCaps="true"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="32dp"
        android:backgroundTint="@color/grey"
        android:src="@drawable/ic_baseline_video_call_24"
        android:id="@+id/fab4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new conversation"
        app:layout_constraintEnd_toStartOf="@id/fab2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:id="@+id/tv_fab1"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:textAllCaps="true"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        app:fabSize="normal"
        android:backgroundTint="@color/green"
        android:src="@drawable/ic_baseline_message_24"
        android:id="@+id/fab1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>